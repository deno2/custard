#! /bin/bash

echo "[ScraperWiki mocha wrapper]"

THISDIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
# Prevent recursion
export PATH="$(echo $PATH | sed "s|${THISDIR}||")"

# Clean DB out and load fixtures (set CU_TEST_CLEAN=false to
# avoid cleaning).
if "${CU_TEST_CLEAN-true}"
then
  test/cleaner.coffee
fi

env mocha "$@"
